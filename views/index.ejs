<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eggs By The Dozen</title>
    <link rel="icon" type="image/x-icon" href="images/favicon.ico" />

    <!-- Bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>

  <body>
    <div class="container-fluid hero-container">
      <!-- Hero Section -->
      <div class="bg-image text-center hero">
        <div
          class="mask"
          style="background-color: rgba(0, 0, 0, 0.75); min-height: 100vh"
        >
          <div
            class="d-flex flex-column justify-content-center align-items-center text-white h-100"
            style="min-height: 100vh; padding-top: 4em; padding-bottom: 4em"
          >
            <h1>Eggs By The Dozen</h1>
            <form action="/" method="POST" enctype="multipart/form-data">
              <input
                type="file"
                id="fec-image"
                name="image"
                class="form-control form-control-lg"
                accept="image/*"
                required
              />
              <input
                type="submit"
                class="btn btn-primary btn-lg"
                value="Submit"
              />
            </form>
            <!-- Image preview -->
            <div class="image-preview" id="img-preview"></div>
            <!-- Fecal Egg Count Display -->
            <% if (show) { %>
            <div class="fec" id="fec">
              <p class="display-fec">
                Fecal egg count in image: <span><%= count %></span>
              </p>
              <p class="display-fec">Eggs per gram: <span><%= gram %></span></p>
              <img
                src="<%= image %>"
                alt="Fecal Sample with Fecal Eggs Highlighted"
              />
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script>
      /* Preview Image - read file input & create new image in HTML */
      // Called when new file input or form submitted and file upload is cleared
      document
        .getElementById("fec-image")
        .addEventListener("change", (event) => {
          /* Preview Image - read file input & create new image in HTML */

          // Take only first file from file input(s)
          const fileInputs = event.target.files;

          // There is file input
          if (fileInputs.length > 0) {
            const fileInput = fileInputs[0];
            const fileReader = new FileReader();

            // Callback function to execute after fileReader.readAsDataURL
            // Onload is parsed first because file-read must happen after the onload is defined for onload to properly run
            fileReader.onload = (e) => {
              document.getElementById(
                "img-preview"
              ).innerHTML = `<img id="preview" src="${e.target.result}" alt="Image Preview" />`;
              document.getElementById("fec").style.visibility = "hidden";
            };

            // FileReader reads --> callback function above is executed after
            fileReader.readAsDataURL(fileInput);
          } else {
            // No File Input - file upload is cleared
            document.getElementById("fec").style.visibility = "visible";
          }
        });
    </script>
  </body>
</html>
